# GPU机器环境变量配置

# GPU配置
CUDA_VISIBLE_DEVICES=0

# OCR服务配置
OCR_ENGINES=easyocr,paddleocr
MAX_BATCH_SIZE=8
WORKER_TIMEOUT=300

# 翻译服务配置
MAX_BATCH_SIZE_NMT=16
TRANSLATION_TIMEOUT=180

# Ollama配置
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODELS=llama3.2:latest,qwen2.5:latest
OLLAMA_NUM_PARALLEL=2
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_FLASH_ATTENTION=1

# 模型路径配置
HF_HOME=/app/models/huggingface
MODEL_CACHE_DIR=/app/models
DIFFUSERS_CACHE=/app/models/diffusers

# Vision服务配置（可选）
INPAINTING_MODEL=runwayml/stable-diffusion-inpainting

# 资源限制
MAX_MEMORY_OCR=8G
MAX_MEMORY_NMT=12G
MAX_MEMORY_OLLAMA=16G
MAX_MEMORY_VISION=12G

# 调试配置
DEBUG=true
LOG_LEVEL=INFO
PYTHONPATH=/app

# 网络配置
GPU_SERVICES_SUBNET=172.20.0.0/16